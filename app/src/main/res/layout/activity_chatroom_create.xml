<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f6f6"
    android:gravity="center_horizontal"
    >
    <include layout="@layout/ui_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_round_corner_white"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:gravity="center"
            android:textColor="#131313"
            android:textSize="16sp"
            android:text="请在下方输入聊天室名称"
            />
        <EditText
            android:id="@+id/targetid_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="#131313"
            android:textSize="14sp"
            android:hint="填写名称..."
            android:textColorHint="#ADADAD"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:background="#ADADAD"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:gravity="center_vertical|right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="公开 "/>
            <ImageView
                android:id="@+id/switch_type"
                android:layout_width="48dp"
                android:layout_height="25dp"
                android:src="@drawable/btn_style_switch_orange"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/yes_btn"
            android:layout_width="291dp"
            android:layout_height="49dp"
            android:background="@drawable/bg_btn_orange"
            android:layout_centerInParent="true"
            android:layout_marginTop="49dp"
            android:layout_marginBottom="49dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="创建聊天室"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
